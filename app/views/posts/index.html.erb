
<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <p> <strong><%= link_to post.user %> </strong>
        <p><%= link_to image_tag(post.image.url), post %></p>
        <p><em><%= post.caption %></em>  </p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
